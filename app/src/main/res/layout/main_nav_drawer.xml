<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:gravity="center"
    android:orientation="vertical">


    <Button
        android:id="@+id/button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:background="@drawable/back_arrow"
        android:backgroundTint="#FF0092"
        android:onClick="ClickCross"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:src="@drawable/profilo" />

    <TextView
        android:id="@+id/nome_hambuger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Matteo Renzi"
        android:textColor="#474747"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mail_hamburger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="matteorenzi@senato.it"
        android:textColor="#474747" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:onClick="ClickProfilo"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="0dp"
            android:background="#00FFFFFF"
            android:src="@drawable/profilo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_display_medium"
            android:padding="12dp"
            android:text="Profilo"
            android:textColor="#474747"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="ClickCorsiSalvati"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="0dp"
            android:background="#00FFFFFF"
            android:src="@drawable/prefe" />

        <TextView
            android:id="@+id/font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_display_medium"
            android:padding="12dp"
            android:text="Corsi Salvati"
            android:textColor="#474747"
            android:textSize="18sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="ClickEasyUtility"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="0dp"
            android:background="#00FFFFFF"
            android:src="@drawable/compiler" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_display_medium"
            android:padding="12dp"
            android:text="Easy Utility"
            android:textColor="#474747"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="ClickImpostazioni"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="0dp"
            android:background="#00FFFFFF"
            android:src="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_display_medium"
            android:padding="12dp"
            android:text="Impostazioni"
            android:textColor="#474747"
            android:textSize="18sp" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="ClickAbout"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="0dp"
            android:background="#00FFFFFF"
            android:src="@drawable/about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_display_medium"
            android:padding="12dp"
            android:text="About"
            android:textColor="#474747"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="ClickCondividi"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="20dp"
            android:layout_marginEnd="0dp"
            android:background="#00FFFFFF"
            android:src="@drawable/share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/sf_ui_display_medium"
            android:padding="12dp"
            android:text="Condividi"
            android:textColor="#474747"
            android:textSize="18sp" />


    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FF0092" />

    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="78dp"
        android:layout_marginTop="0dp"
        android:alpha="1"
        android:onClick="ClickLogout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/log_out_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:alpha="1"
            android:paddingLeft="5dp"
            android:src="@drawable/logout" />

        <TextView
            android:id="@+id/log_txt"
            android:layout_width="81dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:alpha="1"
            android:fontFamily="@font/sf_ui_display_medium"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="Logout"
            android:textColor="#474747"
            android:textSize="18sp" />


    </LinearLayout>


</LinearLayout>